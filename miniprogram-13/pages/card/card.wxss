/* pages/card/card.wxss */

.card-footer-menus{
    color: #fff;
    font-size: 14px;
    padding: 20px;
    display: flex;
    text-align: center;
}
.card-footer-menus .footer-menu-item{
    flex: 1;
    display: flex;
    flex-direction:column;
    align-items: center;
    width: auto !important;
    background: none;
    border: none;
    padding: 0;
    color: #fff;
    font-weight: normal;
}

.footer-menu-item .menu-name{
    padding-top: 16rpx;
    line-height: 100%;
    font-size: 12px;
}

.menu-icon{
    width: 24px;
    height:24px;
    display: block;
}


.theme-default{

}

.card-tag-list{
    text-align: center;
    font-size: 12px;
}
.card-tag-item{
    
    margin: 10rpx;
    line-height: 100%;
    padding: 20rpx 17rpx;
    display: inline-block;
    background: #3388ff;
    color: #fff;
    padding: 20rpx;
    font-size: 24rpx;
}

.card-btn-phone{
    display: block;
    box-sizing: border-box;
    
    padding: 8px;
    border-radius: 20px;

}

.contact-item{
    display: flex;
    flex-direction: row;
    padding: 20rpx 0;
    border-bottom: #ededed solid 2rpx;
    align-items: center;
}

.contact-item .item-label{
    font-size: 30rpx;
    font-weight: 500;
    color: #888;
}

.item-value{
    padding-left: 20rpx;
    text-align: left;
    color: #333;
}

.item-btn{
    padding:10rpx 20rpx;
    border: #07c160 solid 2rpx;
    color: #07c160;
    font-size: 28rpx;
    border-radius: 10rpx;
}