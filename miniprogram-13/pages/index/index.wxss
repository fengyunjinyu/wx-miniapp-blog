/**index.wxss**/

.search_input {
    background-color:transparent;
    padding: 20rpx 0;
  } 
  .search_input .navigator{
    background-color: #fff;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 15rpx;
    color: #999;
    font-size: 32rpx;
    padding: 16rpx 0;
  }

  .index_category_list{
    display: flex;
    flex-direction: row;
  }
  .index_category_list .category_item{
      flex: 1;
      color: #888;
      text-align: center;
      position: relative;
      font-weight: 500;
      font-size: 32rpx;
      padding:30rpx 0;
      line-height: 100%;
  }

  .index_category_list .category_item.active{
      color: #000;
  }


  .index_category_list .category_item.active:after{
      content:'';
      position: absolute;
      width: 40rpx;
      border-bottom: #ff465f solid 6rpx;
      bottom: 0;
      left: 50%;
      margin-left: -20rpx;

  }



