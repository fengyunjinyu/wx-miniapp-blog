/* pages/me/setting.wxss */


.list_base{
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
    border-top: #e9e9e9 solid 2rpx;
    border-bottom: #e9e9e9 solid 2rpx;
}
.list_base .list-item{
    padding: 20rpx 20rpx 20rpx 0;
    font-size: 30rpx;
    border-bottom: #f1f1f1 solid 2rpx;
    color: #000;
}

.list_base .list-item:last-child{
    border-bottom: none;
}


.list-item .item-left{
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 15px;
    color: #000;
}

.list-item .item-right{
    display: flex;
    align-items: center;
    padding:10rpx;
    height:52rpx
}

.item-right-image{
    display: block;
    width: 9px;
    height: 15px;

}

.change_mobile{
    position:fixed;
    top: 60px;
    z-index:50;
    width:100%;
    padding:20px;
    box-sizing:border-box;
    border-radius: 16px;
}

.change_mobile_content{
    background: #fff;
    border-radius: 10px;
    z-index:1000;
    position: relative;
    padding: 20px;
    height:280px
}

.change_mobile_content .title{
    text-align: center;
    padding: 10px 0;
    font-size: 16px;
    font-weight: bold;   
}

.change_mobile_content .mobile_input{
    height: 40px;
    box-sizing: border-box;
    text-align: center;
    background: #f5f6f5;
    border: #f1f1f1 solid 1px;
}

.change_mobile_content .btn{
    display: block;
    border: none;
    font-size: 16px;
    padding: 10px 0;
    line-height: 24px;
}
.btn-primary{
    background:#ff4657;
    color: #fff;
    margin-bottom: 14px;
}

.btn-cancel{
    background-color: #ddd;
    color: #666;
}